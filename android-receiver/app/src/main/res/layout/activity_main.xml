<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LocalFlow Receiver"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive dictation on this device"
        android:textSize="14sp"
        android:textColor="?android:attr/textColorSecondary"
        android:layout_marginBottom="32dp" />

    <!-- Status Card -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp"
        android:background="?attr/colorSurface"
        android:elevation="2dp"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/statusText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="â—‹ Not connected"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- Server URL Input -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="LocalFlow Server URL"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <EditText
        android:id="@+id/serverUrlInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="http://192.168.1.100:3002"
        android:inputType="textUri"
        android:padding="12dp"
        android:background="?attr/colorSurface"
        android:layout_marginBottom="24dp" />

    <!-- Connect Button -->
    <Button
        android:id="@+id/connectButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Start Receiver"
        android:padding="16dp"
        android:textSize="16sp"
        android:layout_marginBottom="16dp" />

    <!-- Accessibility Button -->
    <Button
        android:id="@+id/accessibilityButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enable Auto-Paste (Accessibility)"
        android:padding="12dp"
        style="?attr/materialButtonOutlinedStyle" />

    <!-- Instructions -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How to use:"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1. Enter your LocalFlow server URL
2. Tap 'Start Receiver'
3. On another device, open LocalFlow and record
4. This device will receive and paste the text

For best results, enable Accessibility Service for automatic pasting."
        android:textSize="14sp"
        android:lineSpacingMultiplier="1.3"
        android:textColor="?android:attr/textColorSecondary" />

</LinearLayout>
